<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Makemon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <!-- Material Dialog Style -->
        <item name="md_background_color">@color/white</item>
        <item name="md_color_title">@color/black</item>
        <item name="md_color_content">@color/black</item>
        <item name="md_color_button_text">@color/black</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/splash2</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.App.TextInputLayout" tools:ignore="ResourceCycle">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/white_opacity_80</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <!--<style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/splash_bg_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
    </style>-->
    
</resources>